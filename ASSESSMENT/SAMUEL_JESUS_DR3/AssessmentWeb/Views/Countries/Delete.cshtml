@model AssessmentDomain.Entities.Country

@{
    ViewBag.Title = "Delete";
}

<h4><strong>Delete: </strong>Are you sure you want to delete this?</h4>


<h2>Country: @Model.Name</h2>

<div class="col-4">
    <div class="card mb-4 shadow-sm">
        <img src="@Model.PhotoUrl" class="bd-placeholder-img card-img-top" width="256" />
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger" />
                        @Html.ActionLink("Back", "Index", new { id = Model.Id }, new { @class = "btn btn-sm btn-outline-secondary" })
                    }

                </div>
            </div>
        </div>
    </div>
</div>